#include <stdio.h>

// Function to find minimum value in array
int findMin(int arr[], int n) {
    int min = arr[0];  // Assume first element is minimum
    for(int i = 1; i < n; i++) {
        if(arr[i] < min) {
            min = arr[i];
        }
    }
    return min;  // Return minimum value
}

int main() {
    int n;

    // Input array size
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Function call
    int minValue = findMin(arr, n);

    // Display result
    printf("The minimum value in the array is: %d\n", minValue);

    return 0;
}



//OUTPUT
Enter the number of elements: 6
Enter 6 elements:
15 7 3 12 9 5
The minimum value in the array is: 3
