// LEFT ROTATION

#include <stdio.h>

void leftRotate(int arr[], int n, int d) {
    int temp[d];

    // Store first d elements in temp
    for(int i = 0; i < d; i++) {
        temp[i] = arr[i];
    }

    // Shift the rest of the elements to the left
    for(int i = d; i < n; i++) {
        arr[i - d] = arr[i];
    }

    // Move the stored elements to the end
    for(int i = 0; i < d; i++) {
        arr[n - d + i] = temp[i];
    }
}

int main() {
    int n, d;

    // Input size and elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input number of rotations
    printf("Enter number of positions to rotate left: ");
    scanf("%d", &d);

    // Function call
    leftRotate(arr, n, d);

    // Display rotated array
    printf("Array after left rotation:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}


//OUTPUT
Enter the number of elements: 5
Enter 5 elements:
1 2 3 4 5
Enter number of positions to rotate left: 2
Array after left rotation:
3 4 5 1 2


//------------------------------------------------------------------------------


//RIGHT ROTATION


#include <stdio.h>

void rightRotate(int arr[], int n, int d) {
    int temp[d];

    // Store last d elements in temp
    for(int i = 0; i < d; i++) {
        temp[i] = arr[n - d + i];
    }

    // Shift remaining elements to the right
    for(int i = n - d - 1; i >= 0; i--) {
        arr[i + d] = arr[i];
    }

    // Move stored elements to the front
    for(int i = 0; i < d; i++) {
        arr[i] = temp[i];
    }
}

int main() {
    int n, d;

    // Input size and elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input number of rotations
    printf("Enter number of positions to rotate right: ");
    scanf("%d", &d);

    // Function call
    rightRotate(arr, n, d);

    // Display rotated array
    printf("Array after right rotation:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}


//OUTPUT
Enter the number of elements: 5
Enter 5 elements:
1 2 3 4 5
Enter number of positions to rotate right: 2
Array after right rotation:
4 5 1 2 3
