#include <stdio.h>

int main() {
    int matrix[4][4];

    printf("Enter elements for a 4x4 matrix:\n");

    // Input elements into the matrix
    for(int i = 0; i < 4; i++) {
        for(int j = 0; j < 4; j++) {
            printf("Enter element at position (%d,%d): ", i+1, j+1);
            scanf("%d", &matrix[i][j]);
        }
    }

    // Display matrix with positions
    printf("\nMatrix with positions:\n");
    for(int i = 0; i < 4; i++) {
        for(int j = 0; j < 4; j++) {
            printf("[%d,%d]=%d\t", i+1, j+1, matrix[i][j]);
        }
        printf("\n");
    }

    return 0;
}



//OUTPUT
Enter elements for a 4x4 matrix:
Enter element at position (1,1): 2
Enter element at position (1,2): 6
Enter element at position (1,3): 7
Enter element at position (1,4): 8
Enter element at position (2,1): 3
Enter element at position (2,2): 4
Enter element at position (2,3): 1
Enter element at position (2,4): 10
Enter element at position (3,1): 8
Enter element at position (3,2): 90
Enter element at position (3,3): 70
Enter element at position (3,4): 12
Enter element at position (4,1): 32
Enter element at position (4,2): 41
Enter element at position (4,3): 3
Enter element at position (4,4): 6

Matrix with positions:
[1,1]=2	 [1,2]=6	 [1,3]=7	 [1,4]=8	
[2,1]=3	 [2,2]=4	 [2,3]=1	 [2,4]=10	
[3,1]=8	 [3,2]=90  [3,3]=70	 [3,4]=12	
[4,1]=32 [4,2]=41	 [4,3]=3	 [4,4]=6	
